<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MetaDataMapper">
    <resultMap id="PositionDataResultMap"
               type="com.example.TaskFlow.model.response.PositionResponse">
        <result property="positionCode" column="position_code"/>
        <result property="nameKo" column="name_ko"/>
        <result property="level" column="level"/>
        <result property="description" column="description"/>
    </resultMap>

    <resultMap id="RoleDataResultMap"
               type="com.example.TaskFlow.model.response.RoleResponse">
        <result property="roleCode" column="role_code"/>
        <result property="nameKo" column="name_ko"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="findAllPositions" resultMap="PositionDataResultMap">
        SELECT
        position_code,
        name_ko,
        level,
        description
        FROM positions
        ORDER BY level ASC
    </select>

    <select id="findAllRoles" resultMap="RoleDataResultMap">
        SELECT
        role_code,
        name_ko,
        description
        FROM roles
        ORDER BY role_code ASC
    </select>
</mapper>